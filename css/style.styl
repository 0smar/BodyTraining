@import 'jeet'

redColor =#E3001B

skew(value)
  	-webkit-transform: skewX(value)
  	-moz-transform: skewX(value)
  	-ms-transform: skewX(value)
  	-o-transform: skewX(value)
  	transform: skewX(value)

@font-face
	font-family ProximaNovaExtrabold
	font-style normal
	src url(../fonts/ProximaNovaExtrabold.otf)
	
@font-face
	font-family ProximaNovaLight
	font-style normal
	src url(../fonts/ProximaNovaLight.otf)
	
@font-face
	font-family Galeb
	font-style normal
	src url(../fonts/GalebTextureOne.otf)

html
	height 100%
body
	margin 0
	padding 0
	-webkit-appearance none
	background-color #1c1c1c
	font-family ProximaNovaLight

.container
	width 80%
	min-width 1000px
	margin 0 auto
	
#sticky.stick 
    position fixed
    top 0
    z-index 10000

/*---MENU---*/
.menu 
	width 100%
	text-align center
	.logo
		span(2/8)
		skew(-20deg)
		background-color black
		img
			width 100%
			skew(20deg)
	.buttons
		span(6/8)
		a
			text-decoration none
			color white
			font-family ProximaNovaExtrabold
		.button 
			span(1/6)
			skew(-20deg)
			background-color black
			height 4em
			line-height 4em
			transition: all 700ms ease;
			&:hover
				background-color redColor
/*---INTRO---*/
.introduction
	text-align center
	padding-top 3em
	padding-bottom 3em
	.container 
		overflow hidden
		.socialMedia
			text-align right
			width 170px
			float right
			a 
				.icon
					col(1/3)
					background-color white
					text-align center
					transition: all 500ms ease;
					skew(-20deg)
					&:hover
						background-color redColor
					img 
						width 70%
						skew(20deg)
		.info
			padding-top 3em
			padding-bottom 3em
			.description
				col(1/2)
				text-align left
				h2
					text-align center
					font-family ProximaNovaExtrabold
					color redColor
					font-size 2em
				p 
					font-family ProximaNovaLight
					color white
					text-align justify
					font-size 1.1em
					padding-left 10%
					padding-right 10%
				.classes
					text-align center
					a
						text-decoration none
						color white
						font-weight bold
						&:hover
							color redColor
					span 
						color redColor
			.logo
				col(1/2)
				text-align center
				padding-top 3em
				img 
					width 100%
/*---STEPS---*/
.steps 
	background-color redColor
	height 200px
	.step 
		col(1/3)
		text-align center
		padding-top 0.7em
/*---CLASES---*/
.classes
	padding-top 3em
	padding-bottom 6em
	text-align center
	overflow hidden
	.container 
		overflow hidden
	.description
		col(1/2)
		h2
			text-align left
			padding-left 10%
			color redColor
			font-size 2em 
			font-family ProximaNovaExtrabold
		p 
			color white 
			text-align justify
			font-size 1.1em
			font-family ProximaNovaLight
			padding-left 10%
			padding-right 10%
	.activities
		padding-top 2em
		col(3/5)
		shift(1/5)
		.act 
			col(1/3)
			img
				width 90%
	.button 
		margin 0 auto
		width 200px
		margin-top 3em
		text-align center
		color white
		font-size 1.5em
		padding-top 0.3em
		padding-bottom 0.3em
		border 3px solid white
		font-weight bold
		transition all 700ms ease
		&:hover
			background-color redColor
	a 
		text-decoration none
/*---BANNER---*/
.banner 
	padding-top 7em
	padding-bottom 4em
	height 300px
	background url('../img/banner.png') no-repeat center center
	background-size 100% 
	text-align right
	.container 
		overflow hidden
	.one
		font-family ProximaNovaExtrabold
		font-style italic
		color white
		font-size 3.7em
	.passion
		color redColor
		font-family Galeb
		font-size 5em
		margin-top -0.7em
/*---CONTACT---*/
.contact 
	padding-top 3em
	padding-bottom 3em
	text-align center
	color white
	.container 
		overflow hidden
	h1
		color redColor 
		font-size 2em 
		font-family ProximaNovaExtrabold
	p 
		font-size 1.1em
		padding-left 30%
		padding-right 30%
	.button 
		margin 0 auto
		width 200px
		margin-top 2em
		text-align center
		color white
		font-size 1.5em
		padding-top 0.3em
		padding-bottom 0.3em
		border 3px solid white
		font-weight bold
		transition all 700ms ease
		&:hover
			background-color redColor
	a 
		text-decoration none
/*---FOOTER---*/
.footer 
	padding-top 2em
	padding-bottom 2em
	background-color black
	color white
	.container 
		overflow hidden
	.links
		col(1/3)
		text-align left 
		a 
			text-decoration none
			color white
			font-size 1.1em
	.icontact
		col(1/3)
		text-align center
		.socialMedia
			width 300px
			margin 0 auto
			text-align center
			.icon 
				width 45px
				display inline-block
				background-color redColor
				skew(-20deg)
				transition all 500ms ease 
				&:hover
					background-color white
				img 
					width 80%
					skew(20deg)
			p 
				col(1/1)
	.logo 
		col(1/3)
		text-align left 
		img 
			width 100%